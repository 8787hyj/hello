<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>admin Login</title>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
</head>
<body>
	<form action="admin" method="post" name="userInfo" onsubmit="return checkValue()">
		관리자 아이디 : <input type="text" name="adminId" /><br />
		관리자 비밀번호 : <input type="text" name="adminPassword" /><br />
		<input type="submit" value="로그인"/>
		<input type="button" value="취소" onclick="goLoginForm()"><br />
		<a href="${pageContext.request.contextPath}">메인으로 돌아가기</a>
	</form>
	<script type="text/javascript">
    
        // 필수 입력정보인 아이디, 비밀번호가 입력되었는지 확인하는 함수
        function checkValue() {
            if(!document.userInfo.adminId.value){
                alert("아이디를 입력하세요.");
                return false;
            }
            
            if(!document.userInfo.adminPassword.value){
                alert("비밀번호를 입력하세요.");
                return false;
            }
            
        }
        
        // 취소 버튼 클릭시 로그인 화면으로 이동 - 미완성
        function goLoginForm() {
            location.href="epbooksMain.jsp";
        }
    </script>


</body>
</html>