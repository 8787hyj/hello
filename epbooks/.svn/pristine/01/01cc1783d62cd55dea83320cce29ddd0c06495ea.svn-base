<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="script/slide.js"></script>
    
        <!--   css Include-->
    <link rel="stylesheet" href="css/slide.css">
</head>
<body>
<form action="">
	<table border="1">
		<tr>
			<td rowspan="6"><a href="daum.net">daum</a></td>
		</tr>
		<tr>
			<td colspan="2">번호: ${bookdetail.ISBN }</td>
		</tr>
		<tr>
			<td>제목</td>
			<td>${bookdetail.title }</td>
		</tr>
		<tr>
			<td>정가</td>
			<td>${bookdetail.pricesales }</td>
		</tr>
		<tr>
			<td>저자</td>
			<td>${bookdetail.author }</td>
		</tr>
		<tr>
			<td>출판사</td>
			<td>${bookdetail.publisher }</td>
		</tr>
		<tr>
			<td>카테고리</td>
			<td colspan="2">${bookdetail.category }</td>
		</tr>
		<tr>
			<td>수량</td>
			<td colspan="2"><input type="number"></td>
		</tr>
		<tr>
			<td rowspan="2" colspan="3"><input type="button" value="장바구니" id="cart"><input type="button" value="바로구매" id="order"></td>
		</tr>
	</table>
	<table border="1">
		<tr>
			<td>책소개</td>
			<td>${bookdetail.desciption }</td>
		</tr>
		<tr><th colspan="2">간략소개</th></tr>
		<tr>
			<td colspan="2"><p>${bookdetail.desciption }</p></td>
		</tr>
	</table>
	<div align="left">추천도서</div>
	<hr>
	<div class="grid extra">Extra Content</div>
        <div class="grid content2">Main Content2
            <div class="slide">
                <img src="img/back.png" alt="" id="back" width="100">
                <ul>
                    <li><img src="img/test01.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test02.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test03.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test04.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test01.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test02.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test03.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test04.jpg" alt="" width="300" height="300"></li>
                    <li><img src="img/test01.jpg" alt="" width="300" height="300"></li>

                </ul>
                <img src="img/next.png" alt="" id="next" width="100">
            </div>
        </div>
</form>
</body>
</html>