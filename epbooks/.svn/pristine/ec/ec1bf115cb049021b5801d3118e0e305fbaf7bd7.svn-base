<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
<mapper namespace="com.epbooks.www.book.service.impl.BookDao"> 

	<select id="selectBookById" resultType="Book" parameterType="String">
		SELECT ISBN,TITLE,PRICESALES,DESCRIPTION,BOOKAMOUNT,AUTHOR,CATEGORY,PUBLISHER 
		FROM BOOKS B,AUTHOR A,PUBLISHER P, CATEGORY C 
		WHERE B.AUTHORID=A.AUTHORID AND B.PUBLISHERID=P.PUBLISHERID AND B.CATEGORYID=C.CATEGORYID AND ISBN = #{ISBN}
	</select>
	
	<select id="selectBookAll" parameterType="Book">
		SELECT ISBN,TITLE,PRICESALES,DESCRIPTION,BOOKAMOUNT,AUTHOR,CATEGORY,PUBLISHER 
		FROM BOOKS B,AUTHOR A,PUBLISHER P, CATEGORY C 
		WHERE B.AUTHORID=A.AUTHORID AND B.PUBLISHERID=P.PUBLISHERID AND B.CATEGORYID=C.CATEGORYID;
		
		<!-- 1. (#{memberid},#{password},#{name},#{email},#{phone}) ==> parametrType을 Member로 지정해줬기 때문에,
		Member 객체만 매개변수로 받으면 알아서 memeber.memeberid 이런식으로 값을 찾아서 insert 시킴.
		2. DTO 변수가 소문자로 memberid로 되어있으면, 대문자 MEMBERID는 에러남 ==> 대소문자 구분을 하는듯 -->
	</select>
	
	<select id="selectBookCount" resultType="Book" >
	SELECT ISBN,TITLE,PRICESALES,DESCRIPTION,BOOKAMOUNT,AUTHOR,CATEGORY,PUBLISHER 
		FROM BOOKS B,AUTHOR A,PUBLISHER P, CATEGORY C 
		WHERE B.AUTHORID=A.AUTHORID AND B.PUBLISHERID=P.PUBLISHERID AND B.CATEGORYID=C.CATEGORYID ORDER BY ISBN DESC LIMIT #{startrow},#{size};
	</select>
	
	<select id="selectCount" parameterType="int" resultType="int">
		SELECT COUNT(*) FROM BOOKS
	</select>
	
	<select id="selectBookCountByCategory" resultType="Book" >
	SELECT ISBN,TITLE,PRICESALES,DESCRIPTION,BOOKAMOUNT,AUTHOR,CATEGORY,PUBLISHER 
		FROM BOOKS B,AUTHOR A,PUBLISHER P, CATEGORY C 
		WHERE B.AUTHORID=A.AUTHORID AND B.PUBLISHERID=P.PUBLISHERID AND B.CATEGORYID=C.CATEGORYID AND B.CATEGORYID=#{category} ORDER BY ISBN DESC LIMIT #{startrow},#{size};

	</select>
	
	<select id="selectCountByCategory" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM BOOKS WHERE CATEGORYID=#{category}
	</select>
	

</mapper>