   .box {
       width: 200px;
       height: 200px;
       border-radius: 70%;
       overflow: hidden;
       margin: 50px 30px 50px 30px;
   }

   .profile {
       width: 100%;
       height: 100%;
       object-fit: cover;

   }

   .borderRa {
       display: flex;
       flex-direction: row;
       flex-wrap: wrap;
       width: 1200px;
       position: relative;
       right: -70px;
       /*            height: 300px;*/
   }

   .title {
       color: #333;
       font-weight: bold;
       /*            white-space: nowrap;*/
       flex-wrap: wrap;
       overflow: hidden;
       text-overflow: ellipsis;
       position: relative;
       /*            right: -70px;*/
       top: -30px;
       font-size: 14px;
   }

   .a_radius {
       text-decoration: none;
       display: block;
       *cursor: pointer;
       ;
   }

   .a_radius:hover .title {
       text-decoration: underline;
   }

   .a_radius:hover .profile {
       transform: scale(1.1);
       transition: all .3s linear;
   }
