   * {
       margin: 0;
       padding: 0;
   }

   .slide {
       width: 900px;
       height: 600px;
       overflow: hidden;
       position: relative;
       margin: 0 auto;
   }

   .slide ul {
       width: 5000px;
       position: absolute;
       top: 0;
       left: 0;
       font-size: 0;
   }

   .slide ul li {
       display: inline-block;
   }

   #back {
       position: absolute;
       top: 100px;
       left: 0;
       cursor: pointer;
       z-index: 1;
       opacity: 0;
       transition: all .3s linear;
       transform: scale(0.5);
   }

   #next {
       position: absolute;
       top: 100px;
       right: 0;
       cursor: pointer;
       z-index: 1;
       opacity: 0;
       transition: all .3s linear;
       transform: scale(0.5);
   }

   .slide:hover #next {
       position: absolute;
       top: 100px;
       right: -10px;
       cursor: pointer;
       z-index: 1;
       opacity: 0.8;
       transform: scale(0.5);

   }

   .slide:hover #back {
       position: absolute;
       top: 100px;
       left: -10px;
       cursor: pointer;
       z-index: 1;
       opacity: 0.8;
       transform: scale(0.5);
   }
